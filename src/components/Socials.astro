---
import { SITE, SOCIALS } from "@consts";
import Link from "@components/Link.astro";
---

<ul class="not-prose space-y-2 text-lg">
  {
    SOCIALS.map((SOCIAL) => (
      <li class="flex gap-x-2 text-nowrap">
        <Link
          href={SOCIAL.HREF}
          external
          aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
        >
          {Boolean(SOCIAL.ICON) && (
            <span class="hover:dark:text-white" set:html={SOCIAL.ICON} />
          )}
          {SOCIAL.NAME}
        </Link>
      </li>
    ))
  }

  <li class="line-clamp-1">
    <Link href="/rss.xml" external aria-label="RSS feed">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="mr-1 inline size-6 h-5 w-5 align-text-bottom"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12.75 19.5v-.75a7.5 7.5 0 0 0-7.5-7.5H4.5m0-6.75h.75c7.87 0 14.25 6.38 14.25 14.25v.75M6 18.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
        ></path>
      </svg>RSS</Link
    >
  </li>

  <li class="line-clamp-1">
    <Link
      className="email email-href"
      href={SITE.EMAIL}
      aria-label={`Email ${SITE.TITLE}`}
    >
      <svg
        class="mr-1 inline h-5 w-5 align-text-bottom"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M2.038 5.61A2.01 2.01 0 0 0 2 6v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6c0-.12-.01-.238-.03-.352l-.866.65-7.89 6.032a2 2 0 0 1-2.429 0L2.884 6.288l-.846-.677Z"
        ></path>
        <path
          d="M20.677 4.117A1.996 1.996 0 0 0 20 4H4c-.225 0-.44.037-.642.105l.758.607L12 10.742 19.9 4.7l.777-.583Z"
        ></path>
      </svg><span class="email email-text">{SITE.EMAIL}</span>
    </Link>
  </li>
</ul>

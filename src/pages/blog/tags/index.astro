---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import { BLOG_TAGS } from "@consts";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft && !post.data.archive)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const tags = posts
  .flatMap((p) => p.data.tags ?? [])
  .filter((tag, index, self) => self.indexOf(tag) === index);
---

<Layout
  title={BLOG_TAGS.TITLE}
  description={BLOG_TAGS.DESCRIPTION}
  route="blog/tags"
>
  <Container>
    <div class="animate">
      <BackToPrevious href="/blog">Back to blog</BackToPrevious>
    </div>

    <div class="animate my-10 space-y-10">
      <h1 class="animate text-3xl font-semibold text-black dark:text-white">
        Tags
      </h1>

      <ul class="animate not-prose flex flex-col gap-4">
        {
          tags.map((tag) => (
            <li>
              <Link
                href={`./${tag}`}
                className="text-xl font-semibold text-gray-500 dark:text-gray-400"
              >
                #{tag}
              </Link>
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
</Layout>
